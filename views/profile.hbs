          <div class="tab-pane fade" id="tab2default">
            <!-- Personal Repositories -->
            <div class="col-md-12">
              <h4>Your Repositories</h4>
              <div class="table-responsive">
                <table id="repoTable" class="table table-bordred">
                  <thead>
                    <th style="width: 55px;">Repo Name</th>
                    <th>Description</th>
                    <th style="width: 50px;">Role</th>

                    <th style="width: 20px;">View</th>
                    <th style="width: 20px;">Edit</th>
                    <th style="width: 20px;">Delete</th>
                  </thead>
                  <tbody>
                    {{#each userRepos}}
                    <tr id="repo{{this.id}}">
                      <td>{{this.repoName}}</td>
                      {{#if this.description}}
                      <td>{{this.description}}</td>
                      {{else}}
                      <td>There is no description for this repository. Contact your project manager to add one.</td>
                      {{/if}}
                      <td>{{this.permission}}</td>
                      <td><p><a href="/code/{{this.repoName}}"><button class="btn btn-primary btn-xs"><i class="fa fa-eye" aria-hidden="true"></i></button></a></p></td>
                      {{#if this.canEdit}}
                      <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><i class="fa fa-pencil" aria-hidden="true"></i></button></p></td>
                      {{else}}
                      <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" disabled><i class="fa fa-pencil" aria-hidden="true"></i></button></p></td>
                      {{/if}}
                      {{#if this.canDelete}}
                      <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><i class="fa fa-trash-o" aria-hidden="true"></i></button></p></td>
                      {{else}}
                      <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" disabled><i class="fa fa-trash-o" aria-hidden="true"></i></button></p></td>
                      {{/if}}
                    </tr>
                    {{/each}}
                  </tbody>
                </table>

