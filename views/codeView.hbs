<!-- <h5>Your unique room id is: <span id="roomName"></span></h5> -->
<div class="row">
  <div class="col-md-3">
    <div class="row fileTree panel panel-body">
      <span>Project: {{directory}}</span>
      <div id="fileTree"></div>
      <hr />
      <span class="modifyFiles">
        <img class="imgButton" src="../images/file_delete.png" onclick="deleteItem()" />
        <img class="imgButton" src="../images/file_edit.png" onclick="renameItem()" />
        <img class="imgButton" src="../images/file_add.png" onclick="createFile()" />
      </span>
    </div>
    <div class="row console panel panel-body">
      <div>
        <img id="runCode" style="width: 32px;" class="imgButton" src="../images/run.png" onclick="runOnce()" hidden/>Console:
        <img id="waitingCode" style="width: 32px;" class="imgButton" src="../images/loading.gif" hidden/>
      </div>
      <textarea readonly id="consoleOutput"></textarea>
      <hr />
    </div>
    <div class="row connectedUsers panel panel-body">
      <strong><span>Connected Clients</span></strong>
      <ul class="users">
      </ul>
      <hr />
      <span><strong>Recent Connections</strong></span>
      <ul class="recentConnections">
      </ul>
    </div>
  </div>
  <div class="col-md-9 displayCode">
    <textarea id="codeArea"></textarea>
  </div>
</div>

<script src="/javascripts/code.js"></script>
<script src="/javascripts/treeView.js"></script>
<script src="/ace/ace.js" type="text/javascript"></script>
<script src="/ace/ext-language_tools.js"></script>
<script type="text/javascript">
  var editor = ace.edit("codeArea");
  editor.setOptions({
    enableBasicAutocompletion: true
  });
  editor.session.setMode("ace/mode/javascript");
</script>
