        </ul>
      </div>
    </nav>
    <!-- End File Functions -->
    <i class="fa fa-refresh refreshView" aria-hidden="true" onclick="refreshView()"></i>
  </div>
  <div class="row console panel panel-body">
    <div>
      <img id="runCode" style="width: 32px;" class="fltBtn" src="../images/run.png" onclick="runOnce()" hidden/>
      <img id="waitingCode" style="width: 32px;" class="fltBtn" src="../images/loading.gif" hidden/>
    </div>
    <textarea readonly id="consoleOutput"></textarea>
    <hr />
  </div>
  <div class="row connectedUsers panel panel-body">
    <strong><span>Connected Clients</span></strong>
    <ul class="users">
    </ul>
    <hr />
    <span><strong>Recent Connections</strong></span>
    <ul class="recentConnections">
    </ul>
    <!-- <span class="chat"><a href="" id="addClass"><i class="fa fa-comments-o" aria-hidden="true"></i> Open Chat</a></span> -->
    <div class="buttons rounded text-center">
      <a id="addClass"><span class="fa fa-facebook-square"></span> Messenger </a>
    </div>
  </div>
</div>
<div class="col-md-9 displayCode">
  <textarea autofocus id="codeArea"></textarea>
</div>
</div>

<nav id="context-menu" class="context-menu"><ul class="context-menu__items">
  <li class="context-menu__item">
    <a href="#" class="context-menu__link" data-action="View" onclick="createFile()"><img class="imgButton" src="../images/file_add.png" /> Create File</a>
  </li>
  <li class="context-menu__item">
    <a href="#" class="context-menu__link" data-action="Edit" onclick="createFolder()"><img class="imgButton" src="../images/file_add.png" /> Create Folder</a>
  </li>
  <li class="context-menu__item">
    <a href="#" class="context-menu__link" data-action="Delete" onclick="renameItem()"><img class="imgButton" src="../images/file_edit.png" /> Rename</a>
  </li>
  <li class="context-menu__item">
    <a href="#" class="context-menu__link" data-action="Delete" onclick="deleteItem()"><img class="imgButton" src="../images/file_delete.png" /> Delete</a>
  </li>
</ul>
</nav>


<div class="chat_box" id="fb_msg"><!-- chatbox -->
  <div class="chatheader">&nbsp;{{session.userInfo.firstname}}</div>
  <div class="close-chatfb" id="removeClass"></div>
  <div class="pesan_chat">
    <div id="chatMessage" style="position: absolute; bottom: 5px">
      <ul id="messages">
      </ul>
      <input id="theMessage" type="text">
      <input type="button" value="Send" onclick="sendMessage('{{session.userInfo.firstname}}');">
    </div>
  </div>
</div>

